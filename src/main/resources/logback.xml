<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
	<!-- disable Logback's status messages while loading the XML itself -->
	<statusListener
		class="ch.qos.logback.core.status.NopStatusListener" />

	<!-- Explicitely load this through Logback before any Logger can chime in. -->
	<conversionRule conversionWord="debugEx"
		converterClass="org.schemaspy.logging.StackTraceOmitter" />

	<appender name="CONSOLE"
		class="ch.qos.logback.core.ConsoleAppender">
		<!-- For Windows terminal coloring only. Doesn't hurt on *nix -->
		<withJansi>true</withJansi>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%highlight(%-5level) - %msg%n%debugEx
			</Pattern>
		</layout>
	</appender>

	<logger name="org.schemaspy" level="info" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>

	<root level="warn">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>
